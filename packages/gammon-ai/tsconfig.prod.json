{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "types": ["node"],
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": true,
    "strictNullChecks": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "frontend"
  ]
}
